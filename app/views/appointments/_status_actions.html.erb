<% if appointment.may_confirm? %>
  <%= button_to "Confirm", confirm_appointment_path(appointment), method: :patch %>
<% end %>

<% if appointment.may_complete? %>
  <%= button_to "Complete", complete_appointment_path(appointment), method: :patch %>
<% end %>

<% if appointment.may_receive? %>
  <%= button_to "Receive", receive_appointment_path(appointment), method: :patch %>
<% end %>

<% if appointment.may_cancel? %>
  <%= button_to "Cancel", cancel_appointment_path(appointment), method: :patch, data: { confirm: "Are you sure?" } %>
<% end %>
